{
  "kind": "collectionType",
  "collectionName": "forum_categories",
  "info": {
    "singularName": "forum-category",
    "pluralName": "forum-categories",
    "displayName": "Forum Category",
    "description": "Forum discussion categories"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "string",
      "default": "ðŸ’¬"
    },
    "color": {
      "type": "string",
      "default": "#3B82F6"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "topics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::forum-topic.forum-topic",
      "mappedBy": "category"
    },
    "topicCount": {
      "type": "integer",
      "default": 0
    },
    "postCount": {
      "type": "integer",
      "default": 0
    },
    "lastActivity": {
      "type": "datetime"
    },
    "lastTopic": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::forum-topic.forum-topic"
    },
    "parentCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::forum-category.forum-category"
    },
    "subCategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::forum-category.forum-category",
      "mappedBy": "parentCategory"
    },
    "permissions": {
      "type": "json",
      "default": {
        "canView": ["authenticated"],
        "canPost": ["authenticated"],
        "canModerate": ["admin"]
      }
    }
  }
}
